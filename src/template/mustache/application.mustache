<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ page_title }}{{^ page_title }}{{ title }}{{/ page_title }}</title>

  {{# stylesheets }}
  <link rel="stylesheet" href="{{ . }}">
  {{/ stylesheets }}
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" integrity="sha256-eZrrJcwDc/3uDhsdt61sL2oOBY362qM3lon1gyExkL0=" crossorigin="anonymous" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bulma/0.6.0/css/bulma.min.css" integrity="sha256-HEtF7HLJZSC3Le1HcsWbz1hDYFPZCqDhZa9QsCgVUdw=" crossorigin="anonymous" />

  <style type="text/css">
      html {
      background-color: #e7f4fd;
    }
    .hero .box {
      background-color: #d0eafb;
    }

    .footer {
      bottom: 0;
      padding-bottom: 2rem;
      padding-top: 1rem;
      position: fixed;
      width: 100%;
    }
  {{# stylesheet_inline }}
    {{& stylesheet_inline }}
  {{/ stylesheet_inline }}
  </style>
</head>

<body>

  {{> application-header }}

  <section class="section coloumns column is-10 is-offset-1">
    {{# messages }}
    <div class="message{{#type}} is-{{ type }}{{/type}}">

      <div class="message-header">
        <p>{{ message }}</p>
        <button class="delete" aria-label="delete" onclick="this.parentNode.parentNode.classList.toggle('is-hidden');"></button>
      </div>

      {{# details }}
      <p class="message-body">
        {{ details }}
      </p>
      {{/ details }}
    </div>
    {{/ messages }}

    {{> form }}

    {{# results}}
    <div class="results has-text-centered">
        <h2 class="title">Search Results ({{ results }})</h2>

        {{# result_list }}
          {{> result }}
        {{/ result_list }}
    </div>
    {{/ results}}
  </section>

  {{> application-footer }}

  {{# javascript }}
    <script src="{{ . }}"></script>
  {{/ javascript }}
  {{# javascript_inline }}
    <script>{{& javascript_inline }}</script>
  {{/ javascript_inline }}
</body>
</html>
